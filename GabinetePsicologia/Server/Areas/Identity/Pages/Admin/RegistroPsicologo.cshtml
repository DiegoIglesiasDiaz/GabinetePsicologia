@page
@using GabinetePsicologia.Server.Areas.Identity.Pages.Account
@model RegisterPsicologoModel
@{
    ViewData["Title"] = "Registro Psicologo";
    var rol = User.IsInRole("Administrador");

}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Crear un nuevo Psicólogo</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Nombre" class="form-control" autocomplete="name" aria-required="true" />
                <label asp-for="Input.Nombre"></label>
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Apellido1" class="form-control" autocomplete="surname1" aria-required="true" />
                <label asp-for="Input.Apellido1"></label>
                <span asp-validation-for="Input.Apellido1" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Apellido2" class="form-control" autocomplete="surname2" aria-required="false" />
                <label asp-for="Input.Apellido2"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.NIF" class="form-control" autocomplete="nif" aria-required="true" />
                <label asp-for="Input.NIF"></label>
                <span asp-validation-for="Input.NIF" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


