@page "/Chat"
@using GabinetePsicologia.Shared
@using GabinetePsicologia.Client.Shared
@implements IAsyncDisposable
<PageTitle>Chat</PageTitle>
@if (isInRole && user != null)
{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/chat.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <div class="container">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card chat-app">
                    <div id="plist" class="people-list">
                        <div class="input-group">
                            @if (LsAllPeople != null && LsAllPeople.Count > 0)
                            {
                                <RadzenDropDown TValue="KeyValue" class="AgendaFilter1" Data=@LsAllPeople FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterOperator="StringFilterOperator.Contains" AllowFiltering="true"
                                        TextProperty="Key" ValueProperty="Value" AllowClear=true Placeholder="Nuevo Chat" Change="CreateChat" />
                            }
                        </div>
                        <div class="PeopleScroll">
                            <ul class="list-unstyled chat-list mt-2 mb-0">
                                <!-- Personas Chat -->
                                @foreach (var p in LsPeople)
                                {
                                    @if (p.Value == IdChat)
                                    {
                                        <li class="clearfix active">
                                            @*<img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="avatar">*@
                                            <RadzenButton id=@p.Value class="BotonSimple activeButtonChat" Click="() => selectChat(p.Value,p.Key)" Style="color:black">
                                                <div class="about">
                                                    <div class="name">@p.Key</div>
                                                    @*<div class="status"> <i class="fa fa-circle offline"></i> left 7 mins ago </div>*@
                                                </div>
                                            </RadzenButton>
                                        </li>
                                    }
                                    else
                                    {

                                        <li class="clearfix">
                                            @*<img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="avatar">*@
                                            <RadzenButton id=@p.Value class="BotonSimple" Click="() => selectChat(p.Value,p.Key)" Style="color:black">
                                                <div class="about">
                                                    <div class="name">@p.Key</div>
                                                    @*<div class="status"> <i class="fa fa-circle offline"></i> left 7 mins ago </div>*@
                                                </div>
                                            </RadzenButton>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="chat" id="Idchat">
                        <div class="chat-header clearfix">
                            <div class="row">

                                @if (!String.IsNullOrWhiteSpace(NombreChat))
                                {
                                    <div class="d-flex justify-content-between align-items-center">
                                        @*<a href="javascript:void(0);" data-toggle="modal" data-target="#view_info">
                                <img src="https://bootdey.com/img/Content/avatar/avatar2.png" alt="avatar">
                                </a>*@
                                        <div class="UserModalBoton">
                                            <RadzenButton class="BotonPrincipal" Icon="account_circle" Click="UserModal" />
                                        </div>
                                        <div class="chat-about">
                                            <h6 class="m-b-0">@NombreChat</h6>
                                            @* <small>Last seen: 2 hours ago</small>*@
                                        </div>


                                    </div>
                                    @*  <div class="col-lg-6 hidden-sm text-right">
                            @if (LsChats != null && LsChats.Count > 0)
                            {
                            @*<RadzenButton class="BotonDelete" Text="Borrar Chat" Click="Confirm" />
                            }

                            <a href="javascript:void(0);" class="btn btn-outline-secondary"><i class="fa fa-camera"></i></a>
                            <a href="javascript:void(0);" class="btn btn-outline-primary"><i class="fa fa-image"></i></a>
                            <a href="javascript:void(0);" class="btn btn-outline-info"><i class="fa fa-cogs"></i></a>
                            <a href="javascript:vd(0);" class="btn btn-outline-warning"><i class="fa fa-question"></i></a>
                            </div>*@
                                }
                            </div>
                        </div>
                        <div id="Idchat-history" class="chat-history">

                            @if (LsChats != null)
                            {
                                <ul class="m-b-0">
                                    <!-- Mensajes Chat -->
                                    @foreach (var ch in LsChats)
                                    {
                                        @if (ch.IdFrom == user.Id.ToString())
                                        {
                                            <li class="clearfix">
                                                <div class="message-data text-right">
                                                    <span class="message-data-time">@ch.Date.ToShortTimeString(), @ch.Date.ToShortDateString()</span>
                                                    @*<img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="avatar">*@
                                                </div>
                                                <div class="message other-message float-right">@ch.Message</div>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="clearfix">
                                                <div class="message-data">
                                                    <span class="message-data-time">@ch.Date.ToShortTimeString(), @ch.Date.ToShortDateString()</span>
                                                </div>
                                                <div class="message my-message">@ch.Message</div>
                                            </li>
                                        }
                                    }
                                    @messages
                                </ul>
                            }
                            else
                            {
                                <div class="d-flex flex-column justify-content-center align-items-center">
                                    <RadzenText TextStyle="TextStyle.DisplayH3" Text="Seleccione un Chat" TextAlign="TextAlign.Center" class="TextSeleccioneChat" />
                                    <div class="peopleMobile-list UserModalBoton">
                                       
                                            @if (LsAllPeople != null && LsAllPeople.Count > 0)
                                            {
                                                <RadzenDropDown TValue="KeyValue" class="AgendaFilter1" Data=@LsAllPeople FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterOperator="StringFilterOperator.Contains" AllowFiltering="true"
                                                    TextProperty="Key" ValueProperty="Value" AllowClear=true Placeholder="Nuevo Chat" Change="CreateChat" />
                                            }
                                        <div class="PeopleScroll">
                                            <ul class="list-unstyled chat-list mt-2 mb-0">
                                                <!-- Personas Chat -->
                                                @foreach (var p in LsPeople)
                                                {
                                                    @if (p.Value == IdChat)
                                                    {
                                                        <li class="clearfix active">
                                                            @*<img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="avatar">*@
                                                            <RadzenButton id=@p.Value class="BotonSimple activeButtonChat" Click="() => selectChat(p.Value,p.Key)" Style="color:black">
                                                                <div class="about">
                                                                    <div class="name">@p.Key</div>
                                                                    @*<div class="status"> <i class="fa fa-circle offline"></i> left 7 mins ago </div>*@
                                                                </div>
                                                            </RadzenButton>
                                                        </li>
                                                    }
                                                    else
                                                    {

                                                        <li class="clearfix">
                                                            @*<img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="avatar">*@
                                                            <RadzenButton id=@p.Value class="BotonSimple" Click="() => selectChat(p.Value,p.Key)" Style="color:black">
                                                                <div class="about">
                                                                    <div class="name">@p.Key</div>
                                                                    @*<div class="status"> <i class="fa fa-circle offline"></i> left 7 mins ago </div>*@
                                                                </div>
                                                            </RadzenButton>
                                                        </li>
                                                    }
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>


                            }
                        </div>
                        @if (LsChats != null)
                        {
                            <div class="chat-message clearfix">
                                <div class="input-group mb-0">
                                    <RadzenTextBox @bind-Value=NewChat.Message Placeholder="Escribe un mensaje..." class="form-control" />
                                    <div class="input-group-prepend">
                                        <RadzenButton class="BotonPrincipal fa fa-send" Click=Send id="SendButton" />
                                    </div>
                                </div>

                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
}
else
{
    <_403 />
}

