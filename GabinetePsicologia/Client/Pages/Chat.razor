        isUserModal = true;
        DialogService.Open($"Seleccione un Chat", ds =>
    @<div class="people-list d-flex flex-column justify-content-center ">
       
            @if (LsAllPeople != null && LsAllPeople.Count > 0)
            {
                <RadzenDropDown TValue="KeyValue" class="AgendaFilter1" Data=@LsAllPeople FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterOperator="StringFilterOperator.Contains" AllowFiltering="true"
                        TextProperty="Key" ValueProperty="Value" AllowClear=true Placeholder="Nuevo Chat" Change="CreateChat" />
