@inject DialogService DialogService
@using GabinetePsicologia.Shared
@using Radzen

<div>
    <div class="d-flex justify-content-center flex-column align-items-center">
        <p>Introduzca el código de doble Autenticación</p>
        <div class=" d-flex justify-content-center flex-row align-items-center" style="margin-bottom:1em">
            <RadzenLabel Text="Verificar Pin" />
            <RadzenTextBox @bind-Value=VerificarPin Style="margin-left:1em" />
        </div>
        <div>
            <RadzenCheckBox @bind-Value=RememberMachine />
            <RadzenLabel Text="¿Desea recordar este dispositivo?" />
        </div>
        <div style="width:100%;margin-top:2em;text-align: center;">
             <p>Si tienes Algún problema al Inciar Sesión <a href="/contacto">Contáctanos</a></p>
        </div>
        <div class="d-flex justify-content-evenly align-items-center" style="width:100%;margin-top:1em">
            <RadzenButton Text="Cerrar" class="BotonDelete" Click="() => DialogService.Close(false)" />
            <RadzenButton Text="Verificar" Click="Verificar" class="BotonPrincipal" />
        </div>


    </div>



</div>

